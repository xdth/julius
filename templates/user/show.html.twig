{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="link-dark" href="{{ path('index') }}">Home</a></li>
        <li class="breadcrumb-item"><a class="link-dark" href="#">Settings</a></li>
        <li class="breadcrumb-item"><a class="link-dark" href="{{ path('user_index') }}">Users</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ user.username }}</li>
      </ol>
    </nav>
    
    <div class="row">
      <div class="col-sm-8">
        <h1>User</h1>
      </div>
      <div class="col-sm-4">
        <div class="app-inline-buttons">
          <a class="btn btn-dark" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
          {{ include('user/_delete_form.html.twig') }}
          <a class="btn btn-dark" href="{{ path('user_index') }}">Back</a>
        </div>
      </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ user.details }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
