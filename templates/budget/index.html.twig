{% extends 'base.html.twig' %}

{% block title %}Budget index{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('index') }}">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Budget</li>
      </ol>
    </nav>
    
    <h1>Monthly budget</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Item</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for budget in budgets %}
            <tr>
                <td>{{ budget.id }}</td>
                <td>{{ budget.category }}</td>
                <td>{{ budget.item }}</td>
                <td>{{ budget.value }}</td>
                <td>
                    <a href="{{ path('budget_show', {'id': budget.id}) }}">show</a>
                    <a href="{{ path('budget_edit', {'id': budget.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('budget_new') }}">Create new</a>
{% endblock %}
