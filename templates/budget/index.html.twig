{% extends 'base.html.twig' %}

{% block title %}Budget index{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="link-dark" href="{{ path('index') }}">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Budget</li>
      </ol>
    </nav>
    
    <div class="row">
      <div class="col-sm-8">
        <h1>Monthly budget</h1>
      </div>
      <div class="col-sm-4">
        <div class="app-inline-buttons">
        <a class="btn btn-dark" href="{{ path('budget_new') }}">Create new</a>
        </div>
      </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Item</th>
                <th>Value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for budget in budgets %}
            <tr>
                <td>{{ budget.id }}</td>
                <td>{{ budget.category }}</td>
                <td>{{ budget.item }}</td>
                <td>{{ budget.value }}</td>
                <td>
                    <a class="btn btn-dark btn-sm" href="{{ path('budget_show', {'id': budget.id}) }}">show</a>
                    <a class="btn btn-dark btn-sm" href="{{ path('budget_edit', {'id': budget.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
