{% extends 'base.html.twig' %}

{% block title %}Log index{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('index') }}">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Logs</li>
      </ol>
    </nav>
    
    <h1>Operation logs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Operation</th>
                <th>Value</th>
                <th>Description</th>
                <th>Details</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.id }}</td>
                <td>{{ log.operation }}</td>
                <td>{{ log.value }}</td>
                <td>{{ log.description }}</td>
                <td>{{ log.details }}</td>
                <td>{{ log.date ? log.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('log_show', {'id': log.id}) }}">show</a>
                    <a href="{{ path('log_edit', {'id': log.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('log_new') }}">Create new</a>
{% endblock %}
