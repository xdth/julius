{% extends 'base.html.twig' %}

{% block title %}Log{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('index') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('log_index') }}">Logs</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ log.id }}</li>
      </ol>
    </nav>
    
    <h1>Log</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ log.id }}</td>
            </tr>
            <tr>
                <th>Operation</th>
                <td>{{ log.operation }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ log.value }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ log.description }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ log.details }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ log.date ? log.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('log_index') }}">back to list</a>

    <a href="{{ path('log_edit', {'id': log.id}) }}">edit</a>

    {{ include('log/_delete_form.html.twig') }}
{% endblock %}
