{% extends 'base.html.twig' %}

{% block title %}Log{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="link-dark" href="{{ path('index') }}">Home</a></li>
        <li class="breadcrumb-item"><a class="link-dark" href="{{ path('log_index') }}">Logs</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ log.id }}</li>
      </ol>
    </nav>
    
    <div class="row">
      <div class="col-sm-8">
        <h1>Log</h1>
      </div>
      <div class="col-sm-4">
        <div class="app-inline-buttons">
          <a class="btn btn-dark" href="{{ path('log_edit', {'id': log.id}) }}">Edit</a>
          {{ include('log/_delete_form.html.twig') }}
          <a class="btn btn-dark" href="{{ path('log_index') }}">Back</a>
        </div>
      </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ log.id }}</td>
            </tr>
            <tr>
                <th>Operation</th>
                <td>{{ log.operation }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ log.value }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ log.description }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ log.details }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ log.date ? log.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
