{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="link-dark" href="{{ path('index') }}">Home</a></li>
        <li class="breadcrumb-item"><a class="link-dark" href="#">Settings</a></li>
        <li class="breadcrumb-item"><a class="link-dark" href="{{ path('item_index') }}">Items</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ item.name }}</li>
      </ol>
    </nav>
    
    <div class="row">
      <div class="col-sm-8">
        <h1>Item</h1>
      </div>
      <div class="col-sm-4">
        <div class="app-inline-buttons">
          <a class="btn btn-dark" href="{{ path('item_edit', {'id': item.id}) }}">Edit</a>
          {{ include('item/_delete_form.html.twig') }}
          <a class="btn btn-dark" href="{{ path('item_index') }}">Back</a>
        </div>
      </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ item.description }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ item.details }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
