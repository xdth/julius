{% extends 'base.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="link-dark" href="{{ path('index') }}">Home</a></li>
        <li class="breadcrumb-item"><a class="link-dark" href="#">Settings</a></li>
        <li class="breadcrumb-item active" aria-current="page">Items</li>
      </ol>
    </nav>
    
    <div class="row">
      <div class="col-sm-8">
        <h1>Items</h1>
      </div>
      <div class="col-sm-4">
        <div class="app-inline-buttons">
        <a class="btn btn-dark" href="{{ path('item_new') }}">Create new</a>
        </div>
      </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.description }}</td>
                <td>{{ item.category }}</td>
                <td>
                    <a class="btn btn-dark btn-sm" href="{{ path('item_show', {'id': item.id}) }}">show</a>
                    <a class="btn btn-dark btn-sm" href="{{ path('item_edit', {'id': item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
